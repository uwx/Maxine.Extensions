<Window x:Class="Maxine.LogViewer.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maxine.LogViewer.Desktop"
        mc:Ignorable="d"
        Title="Poki LogViewer" Height="450" Width="1000"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:viewModels="clr-namespace:Maxine.LogViewer.Sink.ViewModels;assembly=Maxine.LogViewer.Sink"
        ui:WindowHelper.UseModernWindowStyle="True"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModelMock, IsDesignTimeCreatable=true}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- https://stackoverflow.com/a/21672408 -->
        <Grid Grid.Row="0">
            <TextBox x:Name="SearchTermTextBox" Margin="5,0" TextChanged="SearchTermTextBox_OnTextChanged" />
            <TextBlock IsHitTestVisible="False" Text="Filter..." VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" Foreground="DarkGray">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsFocused, ElementName=SearchTermTextBox}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <!--#region Settings Panel (Left Side)-->
            <ui:SimpleStackPanel
                Grid.Column="0"
                Margin="10"
                Orientation="Vertical"
                Spacing="10">

                <!--  Level Switch  -->
                <StackPanel Orientation="Vertical">
                    <Label Margin="0"
                           Content="Minimum Level"
                           Padding="5,5,5,1"
                           Target="LevelSwitcher" />

                    <ComboBox Name="LevelSwitcher" />
                </StackPanel>

                <!--  Auto Scroll Switch  -->
                <CheckBox
                    Content="Auto scroll"
                    IsChecked="{Binding IsAutoScrollOn, FallbackValue=True, Mode=OneWayToSource}" />

                <!--  Visibility Switch  -->
                <CheckBox
                    Content="Visible"
                    IsChecked="{Binding LogVisible, FallbackValue=True, Mode=OneWayToSource}" />

            </ui:SimpleStackPanel>
            <!--#endregion-->
            
            <!--#region Log Viewer Panel (RightSide)-->
            <Grid
                Grid.Column="1"
                Margin="10"
            >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Log Viewer Resources  -->
                <Grid.Resources>
                    <!--  Column Widths  -->
                    <GridLength x:Key="TimestampColumnWidth">80</GridLength>
                    <GridLength x:Key="LevelColumnWidth">60</GridLength>
                    <GridLength x:Key="CategoryColumnWidth">350</GridLength>
                    <!--  Styles  -->
                    <Style x:Key="ColumnHeaderBorderStyle" TargetType="Border">
                        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowColor}}" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="0,0,0,0" />
                    </Style>
                    <Style x:Key="ColumnHeaderTextBlockStyle" TargetType="TextBlock">
                        <Setter Property="Margin" Value="2" />
                        <Setter Property="FontFamily" Value="Segoe UI" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>
                    <Style x:Key="LogElementTextBlockStyle" TargetType="TextBlock">
                        <Setter Property="Padding" Value="0,0,0,0" />
                        <Setter Property="FontFamily" Value="Consolas" />
                    </Style>
                </Grid.Resources>

                <!--  Column Headers  -->
                <Grid Grid.Row="0">

                    <Grid.Resources>
                        <Style BasedOn="{StaticResource ColumnHeaderBorderStyle}" TargetType="Border" />
                        <Style BasedOn="{StaticResource ColumnHeaderTextBlockStyle}" TargetType="TextBlock" />
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{StaticResource TimestampColumnWidth}" />
                        <ColumnDefinition Width="{StaticResource LevelColumnWidth}" />
                        <ColumnDefinition Width="{StaticResource CategoryColumnWidth}" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  No Column Header  -->
                    <!-- <Border Grid.Column="0"> -->
                    <!--     <TextBlock Text="No" /> -->
                    <!-- </Border> -->
                    <!--  Timestamp Column Header  -->
                    <Border Grid.Column="0">
                        <TextBlock Text="Time" />
                    </Border>
                    <!--  Level Column Header  -->
                    <Border Grid.Column="1">
                        <TextBlock Text="Level" />
                    </Border>
                    <!--  SourceContext Column Header  -->
                    <Border Grid.Column="2">
                        <TextBlock Text="Category" />
                    </Border>
                    <!--  Message Column Header  -->
                    <Border Grid.Column="3">
                        <TextBlock Text="Message" />
                    </Border>

                </Grid>

                <!--  LogViewer ItemsRepeater  -->
                <ItemsControl
                    Grid.Row="1"
                    Name="LogViewer"
                    VirtualizingStackPanel.IsVirtualizing="True"
                    ScrollViewer.CanContentScroll="True"
                    Visibility="{Binding LogVisible, Converter={StaticResource BooleanToVisibility}}"
                    ItemsSource="{Binding LogsView}"
                >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel IsVirtualizing="True"
                                                    VirtualizationMode="Recycling" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.Template>
                        <ControlTemplate TargetType="ItemsControl">
                            <Border BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    Background="{TemplateBinding Background}">
                                <ScrollViewer CanContentScroll="True" 
                                              Padding="{TemplateBinding Padding}"
                                              Focusable="False"
                                              Loaded="LogScrollViewer_OnLoaded">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </Border>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="viewModels:EmojiLogViewModel">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{StaticResource TimestampColumnWidth}" />
                                    <ColumnDefinition Width="{StaticResource LevelColumnWidth}" />
                                    <ColumnDefinition Width="{StaticResource CategoryColumnWidth}" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  ID Element  -->
                                <!-- <TextBlock -->
                                <!--     Grid.Column="0" -->
                                <!--     TextAlignment="Left" -->
                                <!--     Text="{Binding Id}" /> -->
                                <!--  Timestamp Element  -->
                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="{Binding Timestamp.Foreground}"
                                    TextAlignment="Left"
                                    Text="{Binding Timestamp.Text}" 
                                    Style="{StaticResource LogElementTextBlockStyle}" />
                                <!--  Level Elements  -->
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--  Emoji  -->
                                    <emoji:TextBlock
                                        Grid.Column="0"
                                        TextAlignment="Center"
                                        Text="{Binding Emoji}" />
                                    <!--  Level  -->
                                    <TextBlock
                                        Grid.Column="1"
                                        Foreground="{Binding Level.Foreground}"
                                        TextAlignment="Left"
                                        Text="{Binding Level.Text}"
                                        Style="{StaticResource LogElementTextBlockStyle}" />
                                </Grid>
                                <!--  Source Context Element  -->
                                <TextBlock
                                    Grid.Column="2"
                                    Foreground="{Binding Category.Foreground}"
                                    TextAlignment="Left"
                                    Text="{Binding Category.Text}" 
                                    Style="{StaticResource LogElementTextBlockStyle}" />
                                <!--  Message Elements  -->
                                <StackPanel Grid.Column="3" Orientation="Vertical">
                                    <!--  Message  -->
                                    <TextBlock
                                        Foreground="{Binding Message.Foreground}"
                                        Text="{Binding Message.Text}"
                                        Style="{StaticResource LogElementTextBlockStyle}"
                                        TextWrapping="WrapWithOverflow" />
                                    <!--  Exception  -->
                                    <TextBlock
                                        Foreground="{Binding Exception.Foreground}"
                                        Text="{Binding Exception.Text}"
                                        Visibility="{Binding ExceptionVisibility}"
                                        Style="{StaticResource LogElementTextBlockStyle}"
                                        TextWrapping="WrapWithOverflow" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Grid>
            <!--#endregion-->
        </Grid>
    </Grid>
</Window>
